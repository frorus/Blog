@model UserAccountSettingsViewModel


<form id="account" class="tab-pane fade" role="tabpanel" aria-labelledby="account-tab" method="post" asp-controller="Account" asp-action="EditAccountSettings">
    @*  Set new password  *@
    <div class="blog-card blog-card--content-rows">
        <header>
            <h2 class="blog-subtitle-1">Set new password</h2>
            <p class="color-base-70">
                If your account was created using social account authentication, you may prefer to add an email
                log in. If you signed up with a social media account,
                <a asp-controller="Account" asp-action="ResetPassword">please reset the password</a>
                for your primary email address (@ViewData["UserEmail"]) in
                order to enable this. Please note that email login is in addition to social login rather than
                a replacement for it, so your authenticated social account will continue to be linked to your
                account.
            </p>
        </header>
        @*  Current password field  *@
        <div class="blog-field mb-4">
            <label class="blog-field__label" asp-for="PasswordCurrent">Current password</label>
            <input class="blog-textfield" autocomplete="off" required="required" type="password" value="@Model.PasswordCurrent" asp-for="PasswordCurrent">
        </div>
        @*  New password field  *@
        <div class="blog-field mb-4">
            <label class="blog-field__label" asp-for="PasswordNew">Password</label>
            <input class="blog-textfield" autocomplete="off" required="required" type="password" value="@Model.PasswordNew" asp-for="PasswordNew">
        </div>
        @*  Confirm password field  *@
        <div class="blog-field mb-4">
            <label class="blog-field__label" asp-for="PasswordConfirm">Confirm new password</label>
            <input class="blog-textfield" autocomplete="off" required="required" type="password" value="@Model.PasswordConfirm" asp-for="PasswordConfirm">
        </div>
        <button class="blog-btn" type="submit">Set New Password</button>
    </div>
    @*  Delete account  *@
    <div class="blog-card blog-card--content-rows">
        <h2 class="blog-subtitle-1 color-accent-danger">Danger Zone</h2>
        <div class="grid gap-2">
            <h3 class="blog-subtitle-2">Delete account</h3>
            <div class="grid gap-2" autocomplete="off">
                <p>Deleting your account will:</p>
                <ul class="list-disc pl-6">
                    <li>Delete your profile, along with your authentication associations.</li>
                    <li>Delete any and all content you have, such as articles, comments, or your reading list.</li>
                    <li>Allow your username to become available to anyone.</li>
                </ul>
                <div>
                    <button class="blog-btn blog-btn--danger" type="button" data-toggle="modal" data-target="#deleteAccountModal">Delete Account</button>
                </div>
                <div class="mt-3">
                    <p>
                        <a href="/contact">Contact us</a>
                        if you have any questions.
                    </p>
                </div>
                @*  Modal for deleting an account  *@
                <div id="deleteAccountModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 id="modalLabel" class="modal-title" style="font-weight: var(--fw-bold);">Delete account</h5>
                                <button class="c-btn c-btn--icon-alone" type="button" data-dismiss="modal" aria-label="Close">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div>
                                    <p>You requested account deletion. Please, check your email for further instructions. </p>
                                    <div class="pt-4">
                                        <button class="blog-btn blog-btn--secondary" type="button" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>