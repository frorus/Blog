<div class="wrapper">
    <div>
        <main id="main-content" class="blog-layout blog-layout--header-inside">
            <header class="blog-page-header">
                <h1 class="blog-title">Top tags</h1>
                <form accept-charset="UTF-8" method="get" role="search">
                    <div class="blog-fields blog-fields--horizontal">
                        <div class="blog-field flex-1 relative">
                            <input id="nav-search" class="blog-header--search-input blog-textfield" placeholder="Search for tag">
                            <button class="btn-icon" type="submit">
                                <svg class="blog-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" role="img">
                                    <title>Search</title>
                                    <path d="M18.031 16.617l4.283 4.282-1.415 1.415-4.282-4.283A8.96 8.96 0 0111 20c-4.968 0-9-4.032-9-9s4.032-9 9-9 9 4.032 9 9a8.96 8.96 0 01-1.969 5.617zm-2.006-.742A6.977 6.977 0 0018 11c0-3.868-3.133-7-7-7-3.868 0-7 3.132-7 7 0 3.867 3.132 7 7 7a6.977 6.977 0 004.875-1.975l.15-.15z"></path>
                                </svg>
                            </button>
                        </div>
                        <a class="@*blog-btn blog-btn--ghost*@ c-cta c-cta--branded whitespace-nowrap mr-2" asp-controller="Tag" asp-action="Create">Create tag</a>
                    </div>
                </form>
            </header>
            <div class="grid gap-3 m:gap-4 l:gap-6 m:grid-cols-2 l:grid-cols-3 px-3 m:px-0 pb-3">
                @foreach(var obj in Model)
                {
                    <div class="tag-card blog-card branded-4 p-3 pt-2 m:p-6 m:pt-4 relative" style="border-top-color: rgb(59, 73, 223); ">
                        <h3 class="mb-1 -ml-2">
                            <a class="blog-tag">#@obj.Title</a>
                        </h3>
                        <p class="mb-2 color-base-70 truncate-at-3">Tag description</p>
                        <p class="mb-3 fs-s color-base-60">@obj.Articles.Count posts published</p>
                    </div>
                }
            </div>
        </main>
    </div>
</div>