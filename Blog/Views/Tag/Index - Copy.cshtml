<div class="row">
    @foreach(var obj in Model)
    {
        <div class="col-4 p-3 pt-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">#@obj.Title</h4>
                    @*<a href="#" class="card-link">Card link</a>*@
                    <a asp-controller="Tag" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i> Edit</a>
                    @*<a href="#" class="card-link">Another link</a>*@
                    <a asp-controller="Tag" asp-action="Delete" asp-route-id="@obj.Id"
